    <!-- Modal -->
    <div class="modal" tabindex="-1" id="exampleModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/certificate" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Enter Your Name</label>
                            <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp">
                        </div>
                        <div class="mb-3">
                            <label for="enrollmentno" class="form-label">Enter Your Enrollment Number</label>
                            <input type="text" class="form-control" id="enrollmentno" name="enrollmentno"
                                aria-describedby="enrollmentnoHelp">
                        </div>
                        <div class="mb-3">
                            <label for="micro" class="form-label">Enter Your Mp Sub</label>
                            <input type="text" class="form-control" id="micro" name="micro"
                                aria-describedby="micro">
                        </div>
                        <div class="mb-3">
                            <label for="coi" class="form-label">Enter Your coi no</label>
                            <input type="text" class="form-control" id="coi" name="coi"
                                aria-describedby="coiHelp">
                        </div>
                        <div class="mb-3">
                            <label for="sub" class="form-label">Enter Your sub no</label>
                            <input type="text" class="form-control" id="sub" name="sub"
                                aria-describedby="subHelp">
                        </div>
                        <div class="mb-3">
                            <label for="teachername" class="form-label">Enter Your Teacher Name</label>
                            <input type="text" class="form-control" id="teachername" name="teachername"
                                aria-describedby="teachernameHelp">
                        </div>
                        <button type="submit" class="btn btn-primary">Done</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Form</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/microproject" method="post">
                        <div class="mb-3">
                            <label for="Mname" class="form-label">Enter Your Name</label>
                            <input type="text" class="form-control" id="Mname" name="Mname"
                                aria-describedby="MnameHelp">

                            <label for="Menrollmentno" class="form-label">Enter Your Enrollment Number</label>
                            <input type="text" class="form-control" id="Menrollmentno" name="Menrollmentno"
                                aria-describedby="MenrollmentnoHelp">

                            <label for="Mrollno" class="form-label">Enter Your Roll Number</label>
                            <input type="text" class="form-control" id="Mrollno" name="Mrollno"
                                aria-describedby="MrollnoHelp">

                            <label for="Mteacher" class="form-label">Enter Your Teacher Name</label>
                            <input type="text" class="form-control" id="Mteacher" name="Mteacher"
                                aria-describedby="MteacherHelp">
                        </div>
                        <button type="submit" class="btn btn-primary">Done</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Understood</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="staticBackdropForAnother" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
